$('#btn_submit').on("click", function(e) {
  e.preventDefault();
  $("#user_birthday").val($("#user_birthday_month").val() + "-" + $("#user_birthday_day").val() + "-" + $("#user_birthday_year").val()); 
  $("#signup_form").submit();
}); 
